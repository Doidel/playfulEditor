var GalleryBar = function( editor ){
    var signals = editor.signals;
    var container = new UI.Panel();

    signals.newImageAvailable.add( function ( imgData ) {
	var ul = document.getElementById("imageList");
	var li = document.createElement("li");
	var img = document.createElement("img");		
	img.setAttribute( "src", imgData );		
	ul.appendChild(li);
	li.appendChild(img);
    });

// --------------------------------------------------

    var cameraContainer = new  UI.Panel().setId('camerasector'); 
   
    var addCamera  = new UI.Button( 'Add Camera' ).setMarginTop('5px').setMarginLeft( '7px' );
    var distCamera = new UI.Button( 'Distribute Cameras' ).setMarginTop('5px').setMarginLeft( '7px' );

    cameraContainer.add( addCamera  );
    cameraContainer.add( distCamera );

    cameraContainer.add( new UI.Break() );

    
    

    container.add( cameraContainer );

// --------------------------------------------------

    var imageContainer = new  UI.Panel(); 

    var test  = new UI.Button( 'Add Camera' ).setMarginLeft( '7px' );

    cameraContainer.add( test );

    container.add( cameraContainer );

// --------------------------------------------------

    return container;

}
